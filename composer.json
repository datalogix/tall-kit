{
    "name": "datalogix/tall-kit",
    "description": "A set of components to utilise in your Laravel Blade views using TALL stack.",
    "keywords": [
        "TALL",
        "laravel",
        "blade",
        "tailwind",
        "alphine",
        "livewire",
        "kit",
        "components"
    ],
    "homepage": "https://github.com/datalogix/tall-kit",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Ricardo Gobbo de Souza",
            "email": "ricardogobbosouza@yahoo.com.br"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "illuminate/support": "^8.0",
        "illuminate/view": "^8.0"
    },
    "require-dev": {
        "livewire/livewire": "^2.0",
        "orchestra/testbench-browser-kit": "^6.0",
        "phpunit/phpunit": "^9.0",
        "spatie/laravel-translatable": "^4.0",
        "spatie/phpunit-watcher": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Datalogix\\TALLKit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Datalogix\\TALLKit\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Datalogix\\TALLKit\\TALLKitServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/phpunit",
        "watch": "vendor/bin/phpunit-watcher watch"
    }
}
